upstream nameyourdefine {
  server yourip; // Use private ip
   server otherip; // Use private ip
 }
 
  server {
      listen 80
      location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_redirect off;
        proxy_pass http://mageload;
        }
}
